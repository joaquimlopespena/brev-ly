{
  "name": "brev.ly",
  "version": "1.0.0",
  "description": "gerenciador de urls",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch --env-file .env src/routes/server.ts",
    "test": "NODE_ENV=test dotenv -e .env.test -- vitest run",
    "test:watch": "NODE_ENV=test dotenv -e .env.test -- vitest",
    "test:unit": "NODE_ENV=test dotenv -e .env.test -- vitest run src/test/unit",
    "test:integration": "NODE_ENV=test dotenv -e .env.test -- vitest run src/test/integration",
    "test:coverage": "NODE_ENV=test dotenv -e .env.test -- vitest run --coverage",
    "test:with-db": "npm run db:migrate:test && NODE_ENV=test dotenv -e .env.test -- vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:migrate:test": "dotenv -e .env.test -- drizzle-kit migrate",
    "pretest:with-db": "npm run db:migrate:test",
    "build": "tsup-node --format cjs --dts --clean",
    "start": "node dist/routes/server.js"
  },
  "author": "joaquim",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "3.864.0",
    "@aws-sdk/lib-storage": "^3.864.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "csv-stringify": "^6.6.0",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.43.1",
    "fastify": "^5.3.2",
    "fastify-type-provider-zod": "^4.0.2",
    "postgres": "^3.4.5",
    "uuidv7": "^1.0.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@faker-js/faker": "^9.7.0",
    "@types/node": "^22.15.3",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite-plugin-tsconfig-paths": "^1.4.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  }
}
